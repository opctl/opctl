    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote debug cli dev op",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/src",
            "port": 40000,
            "host": "127.0.0.1",
            "showLog": true
        },
        {
            "name": "Connect to dlv debugger",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 40000,
            "host": "127.0.0.1"
        },
        {
            "name": "Run and debug a test file",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}"
        },
        {
            "name": "Run and debug an opctl node",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cli",
            "args": [
                "--data-dir",
                "${workspaceFolder}/debug-data-dir",
                "--listen-address",
                "127.0.0.1:42224",
                "node",
                "create"
            ]
        }
    ]
}
