                            "type": "object"
                        },
                        "socket": {
                            "additionalProperties": false,
                            "description": "Socket parameter of an op",
                            "properties": {
                                "description": {
                                    "deprecated": true,
                                    "$ref": "#/definitions/markdown"
                                },
                                "isSecret": {
                                    "description": "If the socket is secret",
