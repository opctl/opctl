                                "description": {
                                    "deprecated": true,
                                    "$ref": "#/definitions/markdown"
                                },
                                "default": {
                                    "type": "number"
                                },
                                "isSecret": {
                                    "description": "If the number is secret",
                                    "type": "boolean"
                                },
                                "constraints": {
                                    "$ref": "#/definitions/numberConstraints"
                                }
                            },
                            "type": "object"
                        },
                        "object": {
                            "additionalProperties": false,
