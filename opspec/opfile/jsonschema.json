                    "description": "JSON Schema [anyOf keyword](https://tools.ietf.org/html/draft-wright-json-schema-validation-00#section-5.23)",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/stringConstraints"
                    }
